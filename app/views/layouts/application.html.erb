<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <%# --- Banner --- -%>
    <div class='banner'>
      <% if Rails.env.development? %>
        <h2 style='float: left; margin-top: 1.3em; padding: 4px; color: red; background: black'>BEWARE - DEVELOPMENT ENVIRONMENT</h2>
      <% end %>
      <%= link_to image_tag('/ant.png'), root_path, class: :home %>

      <ol class=menu>
	<li><%= link_to 'Specimens', specimens_path %></li>
	<li><%= link_to 'Sites', sites_path %></li>
	<li><%= link_to 'Taxa', taxa_path %></li>
	<li><%= link_to 'Projects', projects_path %></li>
      </ol>

      <h1><%= yield :title %></h1>
      <div style='clear:both'></div>
    </div>

    <div class='content'>
      <%# --- Flash --- -%>
      <% if !flash.blank? %>
        <div id='error_explanation'>
          <% flash.each do |name, msg| -%>
            <%= content_tag :div, msg, class: name %>
          <% end -%>
        </div>
      <% end -%>

      <%# --- Sidebar --- -%>
        <div class='sidebar'>
           <%= yield :sidebar %>
        </div>
      
      <%# --- Content --- -%>
      <%= yield %>
    </div>
  </body>
</html>
